<!DOCTYPE html>
<html>

<head>
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="UTF-8">

    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="/stylesheets/materialize.css" media="screen,projection" />

    <!--Import Personal CSS -->
    <link type="text/css" rel="stylesheet" href="/stylesheets/style.css" media="screen,projection" />

    <title>Bandejão PUC-Rio</title>
    <link rel="icon" href="/images/food-dome-128.png">
</head>

<body>
    <!-- Navigation Bar -->
    <% include ../partials/band-nav.ejs %>

        <!-- Container -->
        <div class="section no-pad-bot" id="index-banner">
            <div class="container">
                <h1 class="header center orange-text">Administrativo</h1>
                <div class="row center">
                    <h5 class="header col s12 light">Adicionar ou editar um cardápio</h5>
                </div>
                <br>
            </div>
        </div>

        <!-- Main Content -->
        <div id="main-content" class="container">
            <div class="row">
                <div class="col l8 offset-l2">
                    <!-- Cards -->
                    <div class="card white darken-1 hoverable">
                        <div class="card-content black-text">

                            <div class="row">
                                <div class="input-field col s12">
                                    <input type="date" id="calendario" class="datepicker">
                                    <label for="calendario">Escolha a data</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="principal" type="text" class="validate">
                                    <label for="principal">Principal</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="salada" type="text" class="validate">
                                    <label for="salada">Salada</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="healthy" type="text" class="validate">
                                    <label for="healthy">Healthy</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="grill" type="text" class="validate">
                                    <label for="grill">Grill</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="massa" type="text" class="validate">
                                    <label for="massa">Massa</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="sobremesa" type="text" class="validate">
                                    <label for="sobremesa">Sobremesa</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="bebida" type="text" class="validate">
                                    <label for="bebida">Bebida</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s3 offset-s9">
                                    <a class="waves-effect waves-light btn-large">Salvar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card white darken-1 hoverable">
                        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                        <!-- bandejao -->
                        <ins class="adsbygoogle" style="display:block" data-ad-client="ca-pub-4077432369980980" data-ad-slot="7139800951" data-ad-format="auto"></ins>
                        <script>
                            (adsbygoogle = window.adsbygoogle || []).push({});
                        </script>
                    </div>
                </div>
            </div>
        </div>

        <!-- FOOTER -->
        <% include ../partials/band-footer.ejs %>

            <!--Import jQuery before materialize.js-->
            <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
            <script type="text/javascript" src="/js/materialize.js"></script>
            <script type="text/javascript" src="/js/config.js"></script>
</body>

</html>
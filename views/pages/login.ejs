<!DOCTYPE html>
<html>

<head>
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="UTF-8">

    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="/stylesheets/materialize.css" media="screen,projection" />

    <!--Import Personal CSS -->
    <link type="text/css" rel="stylesheet" href="/stylesheets/style.css" media="screen,projection" />

    <title>Bandejão PUC-Rio</title>
    <link rel="icon" href="/images/food-dome-128.png">
</head>

<body>
    <!-- Navigation Bar -->
    <% include ../partials/band-nav.ejs %>

        <!-- Container -->
        <div class="section no-pad-bot" id="index-banner">
            <div class="container">
                <h1 class="header center orange-text">Login</h1>
                <div class="row center">
                    <h5 class="header col s12 light">Restaurante Universitário Sodexo PUC-Rio</h5>
                </div>
                <br>
            </div>
        </div>

        <!-- Main Content -->
        <div id="main-content" class="container">
            <div class="row">
                <div class="col l8 offset-l2">

                    <!-- Card -->
                    <div class="card white darken-1 hoverable">
                        <div class="card-content black-text">
                            <!-- LOGIN FORM -->
                            <form action="/login" method="post">
                                <div class="form-group">
                                    <label>Nome de Usuário</label>
                                    <input type="text" class="form-control" name="email">
                                </div>
                                <div class="form-group">
                                    <label>Senha</label>
                                    <input type="password" class="form-control" name="password">
                                </div>

                                <button type="submit" class="btn btn-warning btn-lg">Login</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- FOOTER -->
        <% include ../partials/band-footer.ejs %>

            <!--Import jQuery before materialize.js-->
            <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
            <script type="text/javascript" src="/js/materialize.js"></script>
            <script type="text/javascript" src="/js/prices.js"></script>
</body>

</html>